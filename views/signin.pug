extends layout 

block main
  form(action="/users/signin" method="post")
    dl
      dt
        label(for="username") Username:
      dd
        input(type="text"
              placeholder="username"
              name="username"
              value=username)
      dt
        label(for="password") Password:
      dd
        input(type="text"
              placeholder="password"
              name="password")

    fieldset.actions
      input(type="submit" value="Sign In")

